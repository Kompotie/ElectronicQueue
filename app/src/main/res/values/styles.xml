<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.ElectronicQueue.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/eq_surface</item>
        <item name="titleTextColor">@color/eq_on_surface</item>
        <item name="subtitleTextColor">@color/eq_muted</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Rounded, modern controls without pulling in extra dependencies -->
    <style name="Widget.ElectronicQueue.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">52dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Widget.ElectronicQueue.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">52dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Widget.ElectronicQueue.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
    </style>

    <style name="Widget.ElectronicQueue.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">22dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">18dp</item>
    </style>

    <style name="Widget.ElectronicQueue.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">14dp</item>
        <item name="chipMinHeight">34dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/eq_on_surface</item>
        <item name="chipBackgroundColor">@color/eq_background</item>
        <item name="chipStrokeColor">@color/eq_outline</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.ElectronicQueue.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ElectronicQueue.Subtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/eq_muted</item>
    </style>

    <style name="TextAppearance.ElectronicQueue.BigNumber" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
